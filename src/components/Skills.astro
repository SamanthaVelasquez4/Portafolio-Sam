---
import type { Skill } from '../interfaces/Interface';

interface Props {
    typeSkills: string,
    skills: Skill[]
}

const {typeSkills, skills} = Astro.props;
---


<div class="mb-16">
    <h3 class="text-3xl font-bold text-center mb-12 fade-in">{typeSkills}</h3>
    <div class="grid grid-cols-2 md:grid-cols-5  gap-8 max-w-4xl mx-auto">
        {
            skills.map(element => (
                <div class="skill-card text-center">
                    <div class="relative w-30 h-30 mx-auto mb-4">
                        <svg class="circular-progress w-full h-full" viewBox="0 0 120 120">
                            <circle class="progress-circle" cx="60" cy="60" r="50"></circle>
                            <circle class="progress-bar" cx="60" cy="60" r="50" 
                                    stroke={element.color} 
                                    stroke-dasharray="0 314" 
                                    data-progress={element.percentage}></circle>
                        </svg>
                        <div class="absolute inset-0 flex items-center justify-center">
                            <span class="text-2xl font-bold">{element.percentage}%</span>
                        </div>
                    </div>
                    <h4 class="font-semibold">{element.name}</h4>
                </div>
            ))
        }
    </div>
</div>