---
import NavItems from './NavItems.astro';
import { navItems } from '../content/db/navItems';
---

<!-- Navigation -->
<nav class="fixed top-0 w-full z-50 bg-opacity-90 backdrop-blur-md" style="background-color: var(--bg-primary);">
    <div class="container mx-auto px-6 py-4">
        <div class="flex justify-between items-center">
            <div class="text-2xl font-bold gradient-text">Portfolio</div>
            
            <div class="hidden md:flex space-x-8">
                <NavItems
                navItems={navItems}/>
            </div>

            <div class="flex items-center space-x-4">
                <button id="theme-toggle" class="theme-toggle p-2 rounded-lg transition-all duration-300">
                    <i class="fas fa-moon" id="theme-icon"></i>
                </button>
                
                <button id="mobile-menu" class="md:hidden">
                    <i class="fas fa-bars text-xl"></i>
                </button>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-nav" class="hidden md:hidden mt-4 pb-4">
            <div class="flex flex-col space-y-4">
                <NavItems
                navItems={navItems}/>
            </div>
        </div>
    </div>
</nav>