---
import type { Home } from '../interfaces/Interface';

interface Props {
    homeInfo : Home,
}

const {homeInfo} = Astro.props;
---

<!-- Home Section -->
<section id="home" class="min-h-screen flex items-center justify-center section-padding">
    <div class="container mx-auto px-6 text-center">
        <div class="fade-in">
            <div class="floating-animation inline-block mb-8">
                <div class="w-40 h-40 mx-auto rounded-full bg-gradient-to-r from-blue-500 to-purple-600 flex items-center justify-center text-white text-4xl font-bold">
                    {homeInfo.acronym}
                </div>
            </div>
            <h1 class="text-5xl md:text-7xl font-bold mb-6">
                <span class="gradient-text">{homeInfo.name}</span>
            </h1>
            <p class="text-xl md:text-2xl mb-8" style="color: var(--text-secondary);">
                {homeInfo.profession}
            </p>
            <div class="flex justify-center space-x-6 mb-8">
                <a href={homeInfo.githubLink} class="text-2xl hover:scale-110 transition-transform" style="color: var(--primary-color);">
                    <i class="fab fa-github"></i>
                </a>
                <a href={homeInfo.lnlink} class="text-2xl hover:scale-110 transition-transform" style="color: var(--primary-color);">
                    <i class="fab fa-linkedin"></i>
                </a>
            </div>
            <div class= "flex justify-center space-x-6">
                <a href="#about" class="inline-block px-8 py-3 rounded-full bg-gradient-to-r from-blue-500 to-purple-600 text-white font-semibold hover:scale-105 transition-transform">
                    Conoceme
                </a>
                <a href="https://drive.google.com/file/d/1xUrKJgjuuHZ__3av9CKt9gN0bfQWtP5-/view?usp=sharing" class="inline-block px-8 py-3 rounded-full bg-gradient-to-r from-blue-500 to-purple-600 text-white font-semibold hover:scale-105 transition-transform">
                    Descargar CV
                </a>
            </div>
            
        </div>
    </div>
</section>