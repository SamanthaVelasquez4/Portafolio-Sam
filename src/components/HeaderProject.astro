---
interface Props{
    href: string
}

const { href } = Astro.props;
---

<header class="fixed top-0 w-full z-50 bg-opacity-90 backdrop-blur-md" style="background-color: var(--bg-primary);">
    <div class="container mx-auto px-6 py-4">
        <div class="flex justify-between items-center">
            <div class="flex items-center space-x-4">
                <a id="back-to-main" class="back-button p-2 rounded-lg transition-all duration-300 hover:scale-105" href={href}> 
                    <i class="fas fa-arrow-left mr-2"></i>
                </a>
            </div>
            
            <button id="theme-toggle" class="theme-toggle p-2 rounded-lg transition-all duration-300">
                <i class="fas fa-moon" id="theme-icon"></i>
            </button>
        </div>
    </div>
</header>